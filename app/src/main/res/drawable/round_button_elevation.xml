<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#FF4CAF50" />
            <stroke
                android:width="2dp"
                android:color="#80FFFFFF" />
            <!-- Sombra interna para efecto de profundidad -->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="#FF2D2D2D" />
            <stroke
                android:width="2dp"
                android:color="#FF4CAF50" />
            <!-- Sombra externa para elevaciÃ³n -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="0dp" />
        </shape>
    </item>

</selector>