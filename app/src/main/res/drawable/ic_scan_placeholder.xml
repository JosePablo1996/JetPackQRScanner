<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="200dp"
    android:height="200dp"
    android:viewportWidth="200"
    android:viewportHeight="200"
    android:tint="@android:color/white">

    <!-- Marco exterior -->
    <path
        android:fillColor="#00000000"
        android:strokeColor="#FFFFFF"
        android:strokeWidth="3"
        android:pathData="M20,20 L180,20 L180,180 L20,180 Z" />

    <!-- Esquinas con efecto de escáner -->
    <!-- Esquina superior izquierda -->
    <path
        android:strokeColor="#4CAF50"
        android:strokeWidth="4"
        android:pathData="M20,20 L50,20 M20,20 L20,50" />

    <!-- Esquina superior derecha -->
    <path
        android:strokeColor="#4CAF50"
        android:strokeWidth="4"
        android:pathData="M180,20 L150,20 M180,20 L180,50" />

    <!-- Esquina inferior izquierda -->
    <path
        android:strokeColor="#4CAF50"
        android:strokeWidth="4"
        android:pathData="M20,180 L20,150 M20,180 L50,180" />

    <!-- Esquina inferior derecha -->
    <path
        android:strokeColor="#4CAF50"
        android:strokeWidth="4"
        android:pathData="M180,180 L150,180 M180,180 L180,150" />

    <!-- Línea de escaneo animada -->
    <path
        android:strokeColor="#FF4081"
        android:strokeWidth="2"
        android:pathData="M40,100 L160,100" />

    <!-- Punto de guía (CORREGIDO) -->
    <group>
        <path
            android:fillColor="#FFFFFF"
            android:fillAlpha="0.5"
            android:pathData="M100,100 a5,5 0 1,1 0.1,0 z" />
    </group>

</vector>