<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo del dropdown -->
    <solid android:color="#FF2D2D2D" />

    <!-- Bordes redondeados -->
    <corners android:radius="8dp" />

    <!-- Borde verde para coincidir con el tema -->
    <stroke
        android:width="1dp"
        android:color="#FF4CAF50" />

    <!-- Padding interno -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

</shape>