<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ScannerActivity">

    <!-- Vista previa de la cámara -->
    <androidx.camera.view.PreviewView
        android:id="@+id/scannerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Marco para QR en el centro -->
    <ImageView
        android:id="@+id/ivScanFrame"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_scan_placeholder"
        android:contentDescription="Marco de escaneo QR"
        android:scaleType="centerInside" />

    <!-- Texto instructivo -->
    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomButtonLayout"
        android:layout_centerHorizontal="true"
        android:text="Escanee el producto y encuentre el mejor precio"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:gravity="center" />

    <!-- Botón de captura manual (centrado en la parte inferior) -->
    <Button
        android:id="@+id/btnCapture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/bottomButtonLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_capture_shape"
        android:visibility="gone"
        android:contentDescription="Capturar imagen" />

    <!-- Barra inferior con botones -->
    <LinearLayout
        android:id="@+id/bottomButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Menú desplegable para tipo de escaneo -->
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerScanType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:popupBackground="#FFFFFF"
            android:spinnerMode="dropdown"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnLote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lote"
            android:backgroundTint="#FF3700B3"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnGaleria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Galería"
            android:backgroundTint="#FF6200EE"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Barra superior con título y botones de control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#80000000"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="QR/Barcode"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Botón de flash/torch -->
        <ImageButton
            android:id="@+id/btnFlash"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_flash_off"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Flash"
            android:layout_marginEnd="8dp" />

        <!-- Botón de cambiar cámara -->
        <ImageButton
            android:id="@+id/btnSwitchCamera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_switch_camera"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Cambiar cámara" />

    </LinearLayout>

    <!-- Controles de zoom -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#80000000"
        android:layout_marginEnd="8dp">

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_zoom_in"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Zoom in" />

        <TextView
            android:id="@+id/tvZoomLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0x"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_zoom_out"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Zoom out" />

    </LinearLayout>

    <!-- Botón de enfoque automático (nuevo) -->
    <ImageButton
        android:id="@+id/btnAutoFocus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/bottomButtonLayout"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Enfoque automático"
        android:src="@drawable/ic_focus" />

</RelativeLayout>