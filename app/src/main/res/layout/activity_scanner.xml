<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ScannerActivity">

    <!-- Vista previa de la cámara -->
    <androidx.camera.view.PreviewView
        android:id="@+id/scannerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay semi-transparente para mejor contraste -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />

    <!-- Marco para QR en el centro con diseño mejorado -->
    <RelativeLayout
        android:id="@+id/scannerFrame"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/scanner_frame_bg">

        <!-- Esquinas decorativas simplificadas -->
        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/white" />

        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/white" />

        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/white" />

        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/white" />

        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/white" />

        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/white" />

        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/white" />

        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/white" />

        <!-- Línea de escaneo animada -->
        <View
            android:id="@+id/scanLine"
            android:layout_width="260dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/scan_line_gradient"
            android:visibility="visible" />

    </RelativeLayout>

    <!-- Texto instructivo mejorado -->
    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomButtonLayout"
        android:layout_centerHorizontal="true"
        android:text="Apunta al código QR dentro del marco"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:padding="16dp"
        android:background="@drawable/rounded_corner_bg"
        android:gravity="center"
        android:elevation="8dp" />

    <!-- Barra inferior con botones - diseño mejorado -->
    <LinearLayout
        android:id="@+id/bottomButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_rounded_bg"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Selector de tipo de escaneo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de escaneo"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinnerScanType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinner_background_modern"
                android:popupBackground="@drawable/spinner_dropdown_bg"
                android:spinnerMode="dropdown"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </LinearLayout>

        <!-- Botón Lote mejorado -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingEnd="8dp">

            <ImageButton
                android:id="@+id/btnLote"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/round_button_bg"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:contentDescription="Escaneo por lote"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lote"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Botón de captura manual mejorado -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingEnd="8dp">

            <ImageButton
                android:id="@+id/btnCapture"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/capture_button_bg"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="Capturar código"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escanear"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Botón Galería mejorado -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnGaleria"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/round_button_bg"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="Abrir galería"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Galería"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Barra superior con título y botones de control - diseño mejorado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bottom_rounded_bg"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Escáner QR/Barcode"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Botón de flash/torch mejorado -->
        <ImageButton
            android:id="@+id/btnFlash"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_set_as"
            android:background="@drawable/circle_button_bg"
            android:contentDescription="Activar flash"
            android:layout_marginEnd="12dp" />

        <!-- Botón de cambiar cámara mejorado -->
        <ImageButton
            android:id="@+id/btnSwitchCamera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_rotate"
            android:background="@drawable/circle_button_bg"
            android:contentDescription="Cambiar cámara" />

    </LinearLayout>

    <!-- Controles de zoom mejorados -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/rounded_corner_bg"
        android:layout_marginEnd="12dp">

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Acercar zoom" />

        <TextView
            android:id="@+id/tvZoomLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0x"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginVertical="8dp" />

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Alejar zoom" />

    </LinearLayout>

    <!-- Botón de enfoque automático mejorado -->
    <ImageButton
        android:id="@+id/btnAutoFocus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/bottomButtonLayout"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle_button_bg"
        android:contentDescription="Enfoque automático"
        android:src="@android:drawable/ic_menu_search" />

    <!-- Indicador de escaneo exitoso simplificado -->
    <ImageView
        android:id="@+id/ivSuccess"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@android:drawable/ic_menu_help"
        android:visibility="invisible"
        android:contentDescription="Escaneo exitoso" />

</RelativeLayout>